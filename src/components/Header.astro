---
// Header component
---

<header class="bg-white text-blue-900 shadow-lg">
  <div class="px-6 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <img src="/orange.svg" alt="Orange Client Logo" class="w-8 h-8" />
        <h1 class="text-2xl font-bold">Orange Client</h1>
      </div>
      <nav class="hidden md:flex space-x-8">
        <a href="/search" class="hover:text-blue-200 transition-colors">Search</a>
        <a href="/about" class="hover:text-blue-200 transition-colors">About</a>
      </nav>
      <button class="md:hidden text-white focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>
