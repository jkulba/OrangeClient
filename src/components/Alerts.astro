<div class="alerts-component">
	<button type="button" aria-label="Alerts">
		<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24">
			<path
				fill="currentColor"
				d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.64 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2zm-2 1H8v-6c0-2.48 1.51-4.5 4-4.5s4 2.02 4 4.5v6z"
			></path>
		</svg>
		<span class="badge">3</span>
	</button>
</div>

<style>
	.alerts-component {
		display: flex;
		align-items: center;
	}
	.alerts-component button {
		position: relative;
		display: flex;
		align-items: center;
		padding: 0.5rem;
		background: none;
		border: none;
		color: var(--black);
		cursor: pointer;
		border-radius: 4px;
		transition: background-color 0.2s;
	}
	.alerts-component button:hover {
		background-color: rgba(var(--black), 5%);
	}
	.badge {
		position: absolute;
		top: 0;
		right: 0;
		background-color: #ff4444;
		color: white;
		font-size: 0.75rem;
		font-weight: bold;
		padding: 0.125rem 0.375rem;
		border-radius: 10px;
		min-width: 1.25rem;
		text-align: center;
	}
</style>
