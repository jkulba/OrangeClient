---
// biome-ignore lint/correctness/noUnusedImports: Layout component is used in template below
import Layout from "../layouts/Layout.astro";
---

<Layout title="AEM Client - Contact">
	<div class="max-w-6xl">
		<div class="mb-8">
			<h1 class="text-4xl font-bold text-gray-800 mb-3">Contact</h1>
			<p class="text-lg text-gray-600">
				Get in touch with our team for support and inquiries.
			</p>
		</div>

		<div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
			<p class="text-gray-600 text-center">
				Contact information and form will be added here.
			</p>
		</div>
	</div>
</Layout>
